<div class= "top-nav">
  <h2> <a class="home" href="/user/dashboard">Flash Me!</a></h2>
  <img src="/bolt.gif" alt="bolt" width='50px' height='50px'>


  <form action="/user/logout" method="get">
    <button class="logout" type="submit" formmethod="get"  formaction="/user/logout">Logout</button > </form>

    </div>

    <div class="results">

      <h3> Results </h3>
      <% @round.guesses.each do |guess| %>
        <div class="question"><%= guess.card.question %></div>
        <div class="answer"> <%= "Your Answer: " %><%= guess.answer %></div>
        <div class="is_correct">
          <%if guess.is_correct %>
            <span class="correct"> correct </span>

          <%else%>
            <span class="incorrect"> Incorrect </span> <br>
            Correct Answer: <%= guess.card.answer %>
          <% end %>
        </div>
        <br>
        <br>
      <% end %>
      <button id="home">Back To Home</button>
      <br>
    </div>
