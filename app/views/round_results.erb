<div class= "top-nav">
  <h2>Flash Me!</h2> 
  <img src="/bolt.gif" alt="bolt" width='50px' height='50px'>


<form action="/user/logout" method="get">
<button class="logout" type="submit" formmethod="get"  formaction="/user/logout">Logout</button > </form>

</div>

<div id="results">
  <h1>END OF THE LINE</h1>
  <table>
    <th>Question
  <% @round.guesses.each do |guess| %>
    <div class="question"><%= guess.card.question %></div>
    <div class="answer"><%= guess.answer %></div>
    <div class="is_correct"><%= guess.is_correct %></div>
    <% if guess.is_correct == false %>
      <a class="show_answer">Click To Show Answer</a>
    <% end %>
  <% end %>

  <a href="/">Home</a>
</div>