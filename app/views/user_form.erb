<div class="container">
  <h1>Sign Up!!</h1>
  <% unless @user.errors.blank? %>
    <p style="color:red"><%= @user.errors[:email] %></p>
  <% end %>
  <br>
  <form id="user_form" action="/user/create" method="post">
    <input type="text" name="user[name]" placeholder="Enter Your Name Here:" value="<%= @user.name%>"><br><br>
    <input type="text" name="user[email]" placeholder="Enter Your Email Here:"><br><br>
    <input type="text" name="user[password]" placeholder="Enter Your Password Here:"><br><br>
    <!-- <input type="text" name="user[confirm_password]" placeholder="Confirm Password:"><br><br>-->
    <input type="submit" value="Create!">


  </form>
</div>
